@model Model.EF.User

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section title{
    Sửa thông tin người dùng
}

@using (Html.BeginForm())
{
