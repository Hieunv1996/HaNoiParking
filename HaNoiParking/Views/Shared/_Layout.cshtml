<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("HỆ THỐNG TÌM BÃI ĐỖ XE", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "font-weight:bold" })
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="containers body-content">
        @RenderBody()
        <footer>
            <div style="text-align:center;margin-top:20px;">
                <span>Giảng viên hướng dẫn: TS. Nguyễn Thị Thanh Tân</span>
                <br />
                <span class="attribution">Designed by: Nguyễn Văn Hiếu - 1481310027; Nguyễn Thị Vân Giang - 1481310019; Hoàng  Phạm Tiệp - 1481310071</span>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
